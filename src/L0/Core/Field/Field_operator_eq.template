namespace Core
{
  template< typename Element, size_t L, size_t T >
  Field< Element, L, T > &Field< Element, L, T >::operator=(Field< Element, L, T > const &other)
  {
    if (d_references == other.d_references)
      return *this;

    destroy()
    std::copy(other.d_field, other.d_field + d_com.localVolume(), d_field);
    std::copy(other.d_offsets, other.d_offsets + 4, d_offsets);
    return *this;
  }
}
