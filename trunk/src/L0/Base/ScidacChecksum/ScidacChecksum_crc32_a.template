template< typename Element >
uint32_t Base::ScidacChecksum::crc32(Element const *buffer, size_t length)
{
  unsigned char const *cBuffer = reinterpret_cast< unsigned char const* >(buffer);

  uint32_t crc = ~uint32_t(0);
  for (size_t ctr = 0; ctr < length * sizeof(Element); ++ctr)
    crc = d_crcTable[(crc ^ cBuffer[ctr]) & 0xff] ^ (crc >> 8);
  return ~crc;
}
