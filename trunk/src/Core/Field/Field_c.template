namespace Core
{
  template< typename Element, size_t L, size_t T >
  void Field< Element, L, T >::increaseIdx(short *idx) const
  {
    if ((++idx[idx_Z]) % d_grid.dim(idx_Z))
      return;
    if ((++idx[idx_Y]) % d_grid.dim(idx_Y))
      return;
    if ((++idx[idx_X]) % d_grid.dim(idx_X))
      return;
    ++idx[idx_T];
  }
}
