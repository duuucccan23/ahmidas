namespace Core
{

  template< size_t Index >
  inline void Propagator::operator*=(Dirac::Gamma< Index > const &gamma)
  {
    for(size_t ts=0; ts<d_components->T(); ts++)
    {
      Propagator::iterator I(begin(ts));
      while(I!=end(ts))
      {
        (*I) *= gamma;
        ++I;
      }
    }
  }

}
