namespace Core
{
  template< typename Element, size_t L, size_t T >
  void Field< Element, L, T >::isolate()
  {
    if (d_references == 1)
      return;
    d_references->operator-=(1);
    d_references = new size_t(1);
    Element *field = new Element[d_unifold.localVolume()];
    std::copy(d_field, d_field + d_unifold.localVolume(), field);
    d_field = field;
    size_t offsets = new size_t[4];
    std::copy(d_offsets, d_offsets + 4, offsets);
    d_offsets = offsets;
  }
}
